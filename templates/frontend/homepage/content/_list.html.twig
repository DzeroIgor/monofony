{% if articles|length == 4 %}
    {% set columns = "two" %}
{% endif %}
{% if articles|length == 3 %}
    {% set columns = "three odd doubling" %}
{% endif %}

<div class="ui container {{ columns|default('') }} cards">
    {% for article in articles %}
        <div class="ui fluid card" >
            <a href="{{ path('app_frontend_article_show', {'id': article.id }) }}" class="blurring dimmable image">
                <div class="ui dimmer">
                    <div class="content">
                        <div class="center">
                            <div class="ui inverted button">{{ 'sylius.ui.view_more'|trans }}</div>
                        </div>
                    </div>
                </div>
            </a>
            <div class="content" >
                <a href="{{ path('app_frontend_article_show', {'id': article.id }) }}" class="header sylius-product-name">{{ article.title }}</a>
            </div>
        </div>
    {% endfor %}
</div>