    { label: 'sylius.ui.my_account'|trans, url: path('sylius_frontend_account_dashboard') },
    { label: 'app.ui.projects'|trans, url: path('app_frontend_project_index') },
    { label: resource.name|default(resource.code|default(resource.id)) },
    { label: 'sylius.ui.edit'|trans }
]
%}

    {{ breadcrumb.crumble(breadcrumbs) }}
